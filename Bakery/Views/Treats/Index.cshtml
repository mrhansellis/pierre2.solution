@{
  ViewData["Title"] = "Home Page";
}

@using Bakery.Models;

<div class="text-center">
  <h1 class="display-4">Add Treats Here<h1>

  @if(Model.Count == 0)
  {
    <h3>Get started by adding a Flavor</h3>
  }
  else
  {
    <ul>
    @foreach (Treat treat in Model)
    {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
    }
    </ul>
  }

  <hr />
  <p>@Html.ActionLink("Treat List", "Index", "Treat") | @Html.ActionLink("Add a treat", "Create")</p>