@{
  ViewData["Title"] = "Home Page";
}

@using Bakery.Models;

<h1>Add Flavors Here<h2>

@if(Model.Count == 0)
{
  <h3>Get started by adding a Flavor</h3>
}
else
{
  <ul>
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
  }
  </ul>
}

<hr />
<p>@Html.ActionLink("Flavor List", "Index", "Flavors") | @Html.ActionLink("Add a flavor", "Create")</p>